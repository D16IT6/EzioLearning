	</ItemGroup>

	<ItemGroup>
	  <Content Update="wwwroot\Uploads\Images\CourseCategories\default-course-category.png">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

</Project>
